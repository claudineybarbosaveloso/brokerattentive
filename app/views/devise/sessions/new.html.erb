<div class="container">
  <div class="row">
    <div class="span8 offset2">
      <div class="light-content">
        <h2>Entrar</h2>
        <hr>
        <div class="row-fluid">
					<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>					

					  <% if @user.errors.any? %>
					    <div id="error_explanation">
					      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this plan from being saved:</h2>

					      <ul>
					      <% @user.errors.full_messages.each do |msg| %>
					        <li><%= msg %></li>
					      <% end %>
					      </ul>
					    </div>
					  <% end %>

            <fieldset>
              <div class="control-group email optional">
                <%= f.label :username, :class => "email optional" %>
                <div class="controls">
                  <%= f.text_field :username, :class => "string email optional input-xlarge" %>
                </div>
              </div>
              <div class="control-group password optional">
                <%= f.label :password, :class => "password optional" %>
								<div class="controls">
								  <%= f.password_field :password, :class => "password optional input-xlarge" %>	
								</div>
              </div>
							<div class="controls">
							  <% if devise_mapping.rememberable? -%>
		              <div class="check-box-remember-me"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		            <% end -%>
							</div> 
							<div class="clr"></div>
							<div class="controls">
							  <%= f.submit "Entrar", :class => "btn btn-large" %>	
							</div>
						</fieldset> 
          <% end %>                          
					<div class="controls">   
						<div class="link-forgot-your-password">
						</div>
					</div>
        </div> 
		    
      </div>
    </div>
  </div>
  <div class="row">

  </div>
</div>

