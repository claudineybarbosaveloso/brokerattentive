<div class="container">
  <div class="row">
    <div class="span8 offset2">
      <div class="light-content">
        <h2>Entrar</h2>
        <hr>
        <div class="row-fluid">
					<%= form_for(@user, :url => (@user.new_record? ? users_path : user_path(@user)),:html => {:class => "simple_form form-horizontal SigninForm AuthForm"}) do |f| %>					
            <fieldset>
              <div class="control-group email optional">
                <%= f.label :username, :class => "email optional" %>
                <div class="controls">
                  <%= f.text_field :username, :class => "string email optional input-xlarge" %>
                </div>
              </div>
              <div class="control-group password optional">
                <%= f.label :password, :class => "password optional" %>
								<div class="controls">
								  <%= f.password_field :password, :class => "password optional input-xlarge" %>	
								</div>
              </div>
							<div class="controls">
							  <% if devise_mapping.rememberable? -%>
		              <div class="check-box-remember-me"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		            <% end -%>
							</div> 
							<div class="clr"></div>
							<div class="controls">
							  <%= f.submit "Entrar", :class => "btn btn-large" %>	
							</div>
						</fieldset> 
          <% end %>                          
					<div class="controls">   
						<div class="link-forgot-your-password">
		          <%= render "devise/shared/links" %>
						</div>
					</div>
        </div> 
		    
      </div>
    </div>
  </div>
  <div class="row">

  </div>
</div>

